<div class="min-h-[calc(100vh-8rem)] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-green-400 mb-2">ðŸŽ„ Mid-Winter Tree Tracker</h1>
      <h2 class="text-xl md:text-2xl font-semibold text-gray-300 mb-2">Create your account</h2>
      <p class="text-sm text-gray-400">Join the tree tracking community</p>
    </div>

    <!-- Card Container -->
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 border-2 border-green-500 rounded-xl shadow-2xl p-6 md:p-8 space-y-6">
      <!-- Google OAuth Button -->
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full flex items-center justify-center px-4 py-3 border-2 border-gray-600 rounded-lg shadow-md bg-white hover:bg-gray-50 transition-all duration-200 text-sm font-medium text-gray-700 hover:shadow-lg" do %>
        <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Continue with Google</span>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center z-0">
          <div class="w-full border-t border-gray-600"></div>
        </div>
        <div class="relative flex justify-center z-10">
          <span class="px-4 py-1 bg-gradient-to-br from-gray-800 to-gray-900 text-gray-400 text-sm font-medium">Or continue with email</span>
        </div>
      </div>

      <!-- Email/Password Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-4">
          <div class="field">
            <%= f.label :email, class: "block text-sm font-semibold text-gray-300 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "w-full px-4 py-3 border-2 border-green-500 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400 bg-gray-800 text-gray-100 placeholder-gray-500 transition-all" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "block text-sm font-semibold text-gray-300 mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-400 mb-1">(<%= @minimum_password_length %> characters minimum)</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢", class: "w-full px-4 py-3 border-2 border-green-500 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400 bg-gray-800 text-gray-100 placeholder-gray-500 transition-all" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-300 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢", class: "w-full px-4 py-3 border-2 border-green-500 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-green-400 bg-gray-800 text-gray-100 placeholder-gray-500 transition-all" %>
          </div>
        </div>

        <div class="pt-2">
          <%= f.submit "Sign up", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-base font-semibold text-white bg-gradient-to-r from-red-600 to-red-500 hover:from-red-500 hover:to-red-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-red-500 transition-all duration-200 transform hover:scale-[1.02]" %>
        </div>
      <% end %>

      <!-- Sign In Link -->
      <div class="text-center pt-4 border-t border-gray-700">
        <p class="text-sm text-gray-400">
          Already have an account?
          <%= link_to "Log in", new_session_path(resource_name), class: "font-semibold text-green-400 hover:text-green-300 transition-colors" %>
        </p>
      </div>
    </div>
  </div>
</div>
