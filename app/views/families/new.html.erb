<div class="w-full max-w-md mx-auto">
  <h1 class="text-xl md:text-2xl font-bold mb-4 md:mb-6 text-red-400">Create New Family</h1>

  <%= form_with model: @family, local: true, class: "space-y-4" do |f| %>
    <% if @family.errors.any? %>
      <div class="bg-red-900/80 border-2 border-red-500 text-red-100 px-4 py-3 rounded mb-4">
        <ul>
          <% @family.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.text_field :name, 
          placeholder: "Enter family name",
          class: "w-full px-4 py-3 border-2 border-gray-600 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 bg-gray-800 text-gray-100 placeholder-gray-500 transition-all duration-200 hover:border-gray-500" %>
    </div>

    <div class="flex flex-col sm:flex-row gap-3">
      <%= f.submit "Create Family", class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500 shadow-md" %>
      <%= link_to "Cancel", families_path, class: "px-4 py-2 border-2 border-gray-600 rounded-md hover:bg-gray-700 text-center text-gray-200" %>
    </div>
  <% end %>
</div>
