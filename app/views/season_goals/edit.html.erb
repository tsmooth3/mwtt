<div class="w-full max-w-md mx-auto">
  <h1 class="text-xl md:text-2xl font-bold mb-4 md:mb-6 text-red-400">Edit Season Goal</h1>

  <div class="mb-4">
    <p class="text-sm text-gray-300">
      <strong>Season:</strong> <%= @season_goal.season.year %><br>
      <em class="text-xs text-gray-400">This goal applies to all families for the season</em>
    </p>
  </div>

  <%= form_with model: @season_goal, url: season_goal_path(@season_goal), local: true, class: "space-y-4" do |f| %>
    <% if @season_goal.errors.any? %>
      <div class="bg-red-900/80 border-2 border-red-500 text-red-100 px-4 py-3 rounded mb-4">
        <ul>
          <% @season_goal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :goal_count, "Goal (number of trees)", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.number_field :goal_count, min: 1, step: 1, class: "w-full px-3 py-2 border-2 border-red-500 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-red-400 bg-gray-800 text-gray-100" %>
      <p class="text-xs text-gray-400 mt-1">Enter a whole number (e.g., 200)</p>
    </div>

    <div class="flex flex-col sm:flex-row gap-3">
      <%= f.submit "Update Goal", class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500 shadow-md" %>
      <%= link_to "Cancel", dashboard_path(season_id: @season_goal.season.year), class: "px-4 py-2 border-2 border-gray-600 rounded-md hover:bg-gray-700 text-center text-gray-200" %>
    </div>
  <% end %>
</div>

