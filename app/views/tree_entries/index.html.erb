<div class="w-full">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-4 md:mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-red-400">ðŸŽ„ Tree Entries</h1>
    <%= link_to "New Entry", new_tree_entry_path, class: "px-3 md:px-4 py-2 text-sm md:text-base bg-green-600 text-white rounded-md hover:bg-green-500 whitespace-nowrap shadow-md hover:shadow-lg transition-all font-medium" %>
  </div>

  <% if @is_family_admin %>
    <div class="mb-4 p-4 bg-blue-900/40 border-2 border-blue-500 rounded-lg shadow-md">
      <p class="text-sm text-blue-200">
        <strong>Admin View:</strong> Showing all entries for <%= @current_season.year %> season (all families)
      </p>
    </div>
  <% elsif current_family %>
    <div class="mb-4 p-4 bg-green-900/40 border-2 border-green-500 rounded-lg shadow-md">
      <p class="text-sm text-green-200">
        <strong>Family:</strong> <%= current_family.name %> - Showing all family entries
      </p>
    </div>
  <% end %>

  <% if @tree_entries.any? %>
    <%# Mobile card layout %>
    <div class="block sm:hidden space-y-4">
      <% @tree_entries.each do |entry| %>
        <div class="border-2 border-gray-700 rounded-lg p-4 bg-gradient-to-br from-gray-800 to-gray-900 <%= 'border-green-500' if entry.user == current_user %>">
          <div class="flex justify-between items-start mb-3">
            <div>
              <p class="text-sm font-semibold text-gray-100"><%= entry.entry_date.strftime("%b %d, %Y") %></p>
              <p class="text-xs text-gray-400">Season: <%= entry.season.year %></p>
              <% if @is_family_admin %>
                <p class="text-xs text-blue-400 mt-1">Family: <%= entry.family.name %></p>
              <% end %>
            </div>
            <div class="text-right">
              <p class="text-lg font-bold text-green-300"><%= entry.tree_count %></p>
              <p class="text-xs text-gray-400">trees</p>
            </div>
          </div>
          <% if @is_family_admin || entry.user == current_user %>
            <div class="pt-3 border-t border-gray-700">
              <div class="flex gap-2">
                <%= link_to "Edit", edit_tree_entry_path(entry), class: "flex-1 px-3 py-2 text-center bg-blue-600 text-white rounded-md hover:bg-blue-500 transition-colors text-sm font-medium" %>
                <%= link_to "Delete", tree_entry_path(entry), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                    class: "flex-1 px-3 py-2 text-center bg-red-600 text-white rounded-md hover:bg-red-500 transition-colors text-sm font-medium" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Desktop table layout %>
    <div class="hidden sm:block border-2 border-gray-700 rounded-lg overflow-hidden bg-gray-800">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-800">
            <tr>
              <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
              <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Trees</th>
              <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Season</th>
              <% if @is_family_admin %>
                <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Family</th>
              <% end %>
              <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider hidden md:table-cell">Added By</th>
              <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-gray-900 divide-y divide-gray-700">
            <% @tree_entries.each do |entry| %>
              <tr class="<%= 'bg-green-900/30' if entry.user == current_user %>">
                <td class="px-3 md:px-6 py-4 whitespace-nowrap text-xs md:text-sm font-medium text-gray-100">
                  <%= entry.entry_date.strftime("%b %d, %Y") %>
                </td>
                <td class="px-3 md:px-6 py-4 whitespace-nowrap text-xs md:text-sm text-gray-300">
                  <%= entry.tree_count %>
                </td>
                <td class="px-3 md:px-6 py-4 whitespace-nowrap text-xs md:text-sm text-gray-300">
                  <%= entry.season.year %>
                </td>
                <% if @is_family_admin %>
                  <td class="px-3 md:px-6 py-4 whitespace-nowrap text-xs md:text-sm text-gray-300">
                    <span class="<%= 'font-medium text-green-400' if entry.family == current_family %>"><%= entry.family.name %></span>
                  </td>
                <% end %>
                <td class="px-3 md:px-6 py-4 whitespace-nowrap text-xs md:text-sm text-gray-300 hidden md:table-cell">
                  <% if entry.user == current_user %>
                    <span class="font-medium text-green-400">You</span>
                  <% else %>
                    <span class="truncate max-w-xs block"><%= entry.user.email %></span>
                  <% end %>
                </td>
                <td class="px-3 md:px-6 py-4 text-xs md:text-sm font-medium">
                  <% if @is_family_admin || entry.user == current_user %>
                    <div class="flex gap-2">
                      <%= link_to "Edit", edit_tree_entry_path(entry), class: "px-3 py-1.5 text-center bg-blue-600 text-white rounded-md hover:bg-blue-500 transition-colors text-xs sm:text-sm font-medium whitespace-nowrap" %>
                      <%= link_to "Delete", tree_entry_path(entry), 
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                          class: "px-3 py-1.5 text-center bg-red-600 text-white rounded-md hover:bg-red-500 transition-colors text-xs sm:text-sm font-medium whitespace-nowrap" %>
                    </div>
                  <% else %>
                    <span class="text-gray-500">â€”</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12 border-2 border-gray-700 rounded-lg bg-gray-800">
      <p class="text-gray-300 mb-4">No tree entries yet.</p>
      <%= link_to "Create your first entry", new_tree_entry_path, class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500 shadow-md" %>
    </div>
  <% end %>
</div>
