<div class="w-full max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-6">Tree Entry Details</h1>

  <div class="border rounded-lg p-6 space-y-4">
    <div>
      <p class="text-sm text-gray-600">Date</p>
      <p class="text-lg font-semibold"><%= @tree_entry.entry_date.strftime("%B %d, %Y") %></p>
    </div>

    <div>
      <p class="text-sm text-gray-600">Number of Trees</p>
      <p class="text-lg font-semibold"><%= @tree_entry.tree_count %></p>
    </div>

    <div>
      <p class="text-sm text-gray-600">Season</p>
      <p class="text-lg font-semibold"><%= @tree_entry.season.year %></p>
    </div>

    <div>
      <p class="text-sm text-gray-600">Family</p>
      <p class="text-lg font-semibold"><%= @tree_entry.family.name %></p>
    </div>

    <div class="flex gap-4 pt-4">
      <%= link_to "Edit", edit_tree_entry_path(@tree_entry), class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <%= link_to "Back", tree_entries_path, class: "px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50" %>
    </div>
  </div>
</div>
